---
// src/layouts/Layout.astro

// This defines the properties our layout can accept.
// We'll pass a "title" for each page.
export interface Props {
	title: string;
}

const { title } = Astro.props;

// Define your navigation links here to easily manage them
const navLinks = [
    { href: "/", text: "Home" },
    { href: "/services", text: "Services" }, // Updated from "Web Design" for clarity
    { href: "/about", text: "About Us" }, // A standard page, add if needed
    { href: "/portfolio", text: "Portfolio" },
    { href: "/contact", text: "Contact Us" } // A standard page, add if needed
]
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-white text-gray-800">

		<!-- Header Section -->
		<header id="main-header" class="bg-white shadow-md sticky top-0 z-50">
			<nav class="container mx-auto px-6 py-4 flex justify-between items-center">
				<!-- Logo -->
				<div class="logo_container">
					<a href="/">
						<!-- IMPORTANT: You must move 'full-logo.png' into the 'public/' folder -->
						<img src="/full-logo.png" alt="WebDesignFla Logo" class="h-16 w-auto" />
					</a>
				</div>
				
				<!-- Desktop Navigation -->
				<div class="hidden md:flex space-x-6">
                    {navLinks.map(link => (
                        <a href={link.href} class="text-gray-600 hover:text-blue-500 transition-colors duration-300">{link.text}</a>
                    ))}
				</div>

				<!-- Mobile Menu Button -->
				<div class="md:hidden flex items-center">
					<button id="mobile-menu-button" class="text-gray-600 hover:text-blue-500 focus:outline-none">
						<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
						</svg>
					</button>
				</div>
			</nav>

			<!-- Mobile Menu -->
			<div id="mobile-menu" class="hidden md:hidden bg-white px-6 pb-4">
                {navLinks.map(link => (
                    <a href={link.href} class="block py-2 text-gray-600 hover:text-blue-500">{link.text}</a>
                ))}
			</div>
		</header>

		<!-- This is where the content of each individual page will go -->
		<main>
			<slot />
		</main>

		<!-- Footer Section -->
		<footer id="main-footer" class="bg-gray-800 text-white">
			<div class="footer-bottom bg-gray-900 py-4">
				<div class="container mx-auto px-6 flex flex-col md:flex-row justify-between items-center text-center md:text-left">
					<div id="footer-info" class="text-gray-400 text-sm mb-4 md:mb-0">
						Copyright Â© 2025 | All Rights Reserved | WebDesignFLA
					</div>
					<div class="et-social-icons">
						<!-- In a real project, these would be SVG icons -->
						<a href="#" class="text-gray-400 hover:text-white mx-2">Facebook</a>
						<a href="#" class="text-gray-400 hover:text-white mx-2">Twitter</a>
					</div>
				</div>
			</div>
		</footer>

        <!-- Script for Mobile Menu Toggle -->
        <script>
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        </script>
	</body>
</html>